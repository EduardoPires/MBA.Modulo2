@using MBA.Modulo2.App.ViewModels
@model ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<br />
<br />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-6">
            <div class="card-header"><div class="card-title">Edit Product</div></div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Current Imagem</label>
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <br />
                            <img src="~/images/@Url.Content(Model.Image)" alt="Product Image" width="150" />
                        }
                    </div>

                    <div class="form-group">
                        <label class="form-label">Image</label>
                        <input name="ImageFile" id="ImageFile" type="file" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="SellerId" value="@ViewData["SellerId"]" readonly />
                        <input type="hidden" id="CurrentImage" name="CurrentImage" value="@Model.Image" />
                        <br />
                        <br />
                    </div>
                    <div class="form-group" style="display: flex; justify-content: space-between;">
                        <div>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div><a asp-action="Index">Back to List</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
