@page "/categorias"
@inject ICategoriaService _categoriaService
@inject NavigationManager navigationManager

<h1>Categorias</h1>
@if(categorias is not null)
{
    <table class="table table-striped">
        <thead><tr><th scope="col">Id</th><th scope="col">Nome</th>><th scope="col">Descrição</th></tr></thead>
        <tbody>
            @foreach(var categoria in categorias)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Name</td>
                    <td>@categoria.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <DisplayMessage ErrorMessage="Não foi possível acessar categorias!!!" />
}
<div>
    <DisplayMessage ErrorMessage="@erroMessage"/>
</div>


@code {
    private IEnumerable<CategoriaDTO> categorias = new List<CategoriaDTO>();

    private string? erroMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            categorias = await _categoriaService.GetCategorias();

        }
        catch (UnauthorizedAccessException)
        {
            navigationManager.NavigateTo("notauthorized");
        }
    }
}
